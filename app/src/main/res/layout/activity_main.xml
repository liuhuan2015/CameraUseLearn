<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.liuh.camerauselearn.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_takepic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拍照(thumbnail)" />

        <Button
            android:id="@+id/btn_takepic_high_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拍照(high-quality)" />

        <Button
            android:id="@+id/btn_record_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="录制视频" />

        <Button
            android:id="@+id/btn_camera_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="相机控制相关" />

        <ImageView
            android:id="@+id/iv_takepic"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp" />

        <VideoView
            android:id="@+id/vv_video"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp" />
    </LinearLayout>
</ScrollView>
